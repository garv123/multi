        <script src="/static/js/plugins//iCheck/icheck.min.js" type="text/javascript"></script>

        <!-- page script -->
        <script type="text/javascript">
            $(function() {


                //When unchecking the checkbox
        $("#check-all").on('ifUnchecked', function(event) {
            //Uncheck all checkboxes
            $("input[type='checkbox']", ".table-striped").iCheck("uncheck");
        });
        //When checking the checkbox
        $("#check-all").on('ifChecked', function(event) {
            //Check all checkboxes
            $("input[type='checkbox']", ".table-striped").iCheck("check");
        });

                
                $("#example1").dataTable();
                $('#example2').dataTable({
                    "bPaginate": true,
                    "bLengthChange": false,
                    "bFilter": false,
                    "bSort": true,
                    "bInfo": true,
                    "bAutoWidth": false
                });
            });
        </script>    

        <script type="text/javascript">

            $(document).on("click", ".open-AddBookDialog", function (e) {

    e.preventDefault();

    var _self = $(this);

    var myBookId = _self.data('id');
    
    var def= "/users/update/"+myBookId;


    var name = _self.data('name');
    $("#name1").val(name);

    var surname = _self.data('surname');
    $("#surname1").val(surname);

    var number = _self.data('number');
    $("#number1").val(number);


   $('#abc').attr('action', def);

    $(_self.attr('href')).modal('show');

});

    </script>






    </body>
